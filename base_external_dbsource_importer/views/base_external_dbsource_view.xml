<odoo>

    <record id="view_dbsource_form" model="ir.ui.view">
        <field name="name">External Dbsource Importer View</field>
        <field name="model">base.external.dbsource</field>
        <field name="inherit_id"
               ref="base_external_dbsource.view_dbsource_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='connector']/../.." position="after">
                <group string="Fields To Update">
                    <field name="fields_to_update_ids" nolabel="1" context="{'default_db_source_id': active_id}">
                        <tree string="Fields" editable="top">
                            <field name="model_id"/>
                            <field name="field_ids" domain="[('model_id', '=', model_id)]" widget="many2many_tags"/>
                        </tree>
                    </field>
                </group>
                <group string="Options">
                    <field name="only_update"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
